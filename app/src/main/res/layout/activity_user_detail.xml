<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_detail_x"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="35dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/button_close"
        tools:layout_editor_absoluteX="10dp" />

    <ImageView
        android:id="@+id/imageview_detail_avatar"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/textview_detail_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="UserName"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textview_detail_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bio"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview_detail_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical" >

        <ImageView
            android:id="@+id/textview_detail_login_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_login"
            android:padding="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="start|center_vertical" >

            <TextView
                android:id="@+id/textview_detail_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/textview_detail_admin"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:contentDescription="admin icon"
                android:scaleType="fitStart"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_staff" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical" >

        <ImageView
            android:id="@+id/textview_detail_location_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_location"
            android:padding="30dp"/>

        <TextView
            android:id="@+id/textview_detail_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/textview_detail_link_icon"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_link"
            android:padding="30dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textview_detail_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:autoLink="web|email"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>